{
  "manifest_version": 2,
  "name": "URL Replace",
  "version": "1.0",
  "description": "Replace URL by pattern mapping",
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["scripts/url_replace.js"]
  }],
  "options_ui": {
    "page": "options/options.html"
  },

  "permissions": ["storage"],
  "applications": {
    "gecko": { "id": "url-replace@duangsuse.org" }
  }
}
